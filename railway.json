{
  "$schema": "https://railway.app/railway.schema.json",
  "$comment": "This file must be in the root directory. Root Directory in Railway should be set to empty or '.'",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "sh -c 'cd backend && npm start'",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

